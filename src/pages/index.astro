---
import BaseLayout from '../components/layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import About from '../components/sections/About.astro';
import Projects from '../components/sections/Projects.astro';
import Skills from '../components/sections/Skills.astro';
import Contact from '../components/sections/Contact.astro';
import Footer from '../components/sections/Footer.astro';

// Page metadata
const pageTitle = "Arnav Panigrahi - Portfolio";
const pageDescription = "Software Developer, ML Enthusiast and Open-Source Lover passionate about everything open-source, Linux, and building cool things with technology.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Hero />
  
  <About />
  
  <Projects />
  
  <Skills />
  
  <Contact />
  
  <Footer 
    copyright="Arnav Panigrahi"
    tagline="Built with <a href='https://astro.build' class='text-blue-400 hover:underline'>Astro</a> and <i class='fas fa-heart text-red-500'></i>"
  />
</BaseLayout>
