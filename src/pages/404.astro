---
import BaseLayout from '../components/layouts/BaseLayout.astro';
import { getBaseUrl, buildUrl } from '../utils/paths';

const pageTitle = "404 - Page Not Found";
const pageDescription = "Oops! The page you're looking for doesn't exist.";
const baseUrl = getBaseUrl();
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen flex flex-col items-center justify-center p-8 text-center relative">
    <h1 class="text-5xl md:text-6xl font-bold mb-4 text-[#cdd6f4]">404</h1>
    <h2 class="text-2xl md:text-3xl mb-8 text-[#f5c2e7]">I forgor to develop this page</h2>
    
    <div class="max-w-md mb-8">
      <img src={buildUrl('bwaa.gif')} alt="404 Error" class="w-full rounded-lg shadow-lg">
    </div>
    
    <p class="max-w-lg mb-8 text-lg text-[#a6adc8]">Page no workey! Let's put you back home!</p>
    
    <a href={baseUrl} class="px-6 py-3 bg-[#f5c2e7] text-[#1e1e2e] rounded-lg hover:bg-[#f38ba8] transition shadow-lg tooltip" title="I wanna go home">
      Go back home
    </a>
    
    <!-- Semi-transparent overlay for better text readability -->
    <div class="absolute inset-0 bg-[#1e1e2e] bg-opacity-90 -z-10"></div>
  </div>
</BaseLayout>

<style>
  /* Make sure the canvas is behind the content but visible */
  :global(canvas#boidCanvas) {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -20;
    filter: blur(5px);
  }
  
  /* Custom tooltip styling */
  .tooltip {
    position: relative;
  }
  
  .tooltip:hover::after {
    content: attr(title);
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    background-color: #313244; /* Catppuccin Mocha Surface0 */
    color: #cdd6f4; /* Catppuccin Mocha Text */
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    white-space: nowrap;
    margin-bottom: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    z-index: 10;
  }
</style>
