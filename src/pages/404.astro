---
import BaseLayout from '../components/layouts/BaseLayout.astro';
import { getBaseUrl, buildUrl } from '../utils/paths';

const pageTitle = "404 - Page Not Found";
const pageDescription = "Oops! The page you're looking for doesn't exist.";
const baseUrl = getBaseUrl();
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen flex flex-col items-center justify-center p-8 text-center relative section-transition">
    <h1 class="text-5xl md:text-6xl font-bold mb-4 text-gradient text-shadow-lg">404</h1>
    <h2 class="text-2xl md:text-3xl mb-8 text-white/90 text-shadow-md">I forgor to develop this page</h2>

    <div class="mb-8 glass-liquid shadow-glass w-64 h-64 rounded-full overflow-hidden mx-auto flex items-center justify-center" data-glass-interactive data-glass-random>
      <img src={buildUrl('bwaa.gif')} alt="404 Error" class="w-full h-full object-cover">
    </div>

    <p class="max-w-lg mb-8 text-lg text-white/80">Page no workey! Let's put you back home!</p>

    <div class="btn-wrap">
      <a href={baseUrl} class="btn-fancy" title="I wanna go home" data-glass-interactive data-glass-random>
        <span>Go back home</span>
      </a>
      <div class="btn-shadow"></div>
    </div>
  </div>
</BaseLayout>

