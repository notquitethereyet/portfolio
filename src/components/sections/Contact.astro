---
interface SocialLink {
  platform: string;
  icon: string;
  url: string;
}

interface Props {
  socialLinks?: SocialLink[];
  email?: string;
}

const defaultEmail = "arnav.panigrahi@gmail.com";

const defaultSocialLinks: SocialLink[] = [
  { platform: "GitHub", icon: "fa-github", url: "https://github.com/notquitethereyet" },
  { platform: "LinkedIn", icon: "fa-linkedin", url: "https://www.linkedin.com/in/arnav-panigrahi/" },
  // { platform: "Twitter", icon: "fa-twitter", url: "https://twitter.com/arnavpanigrahi" },
  // { platform: "Dev.to", icon: "fa-dev", url: "https://dev.to/arnavpanigrahi" },
  { platform: "Medium", icon: "fa-medium", url: "https://medium.com/@notquitethereyet_/vim-for-beginners-bdbbceb46b19" }
];

const { 
  socialLinks = defaultSocialLinks,
  email = defaultEmail
} = Astro.props;
---

<section id="contact" class="py-16 px-4 bg-white bg-opacity-90 section-transition">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-center text-blue-900">Connect With Me</h2>
    
    <div class="flex justify-center">
      <div class="bg-blue-50 p-6 rounded-lg shadow-lg max-w-md w-full">
        <div class="flex justify-center space-x-6">
          {socialLinks.map((social) => (
            <a href={social.url} class="text-blue-600 hover:text-blue-800 transition" aria-label={social.platform} target="_blank" rel="noopener noreferrer">
              <i class={`fab ${social.icon} text-2xl`}></i>
            </a>
          ))}
          <a href={`mailto:${email}`} class="text-blue-600 hover:text-blue-800 transition" aria-label="Email">
            <i class="fas fa-envelope text-2xl"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
