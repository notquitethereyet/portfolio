---
import SkillCard from '../ui/SkillCard.astro';

interface Skill {
  name: string;
  icon: string;
  prefix?: string;
}

interface SkillCategory {
  title: string;
  skills: Skill[];
}

interface Props {
  categories?: SkillCategory[];
}

const defaultCategories: SkillCategory[] = [
  {
    title: "Backend Development & Infrastructure",
    skills: [
      { name: "Python", icon: "fa-python", prefix: "fab" },
      { name: "FastAPI", icon: "fa-server", prefix: "fas" },
      { name: "Node.js", icon: "fa-node-js", prefix: "fab" },
      { name: "Express.js", icon: "fa-server", prefix: "fas" },
      { name: "Docker", icon: "fa-docker", prefix: "fab" },
      { name: "Kubernetes", icon: "fa-cubes", prefix: "fas" }
    ]
  },
  {
    title: "Frontend Development & UI",
    skills: [
      { name: "React.js", icon: "fa-react", prefix: "fab" },
      { name: "Angular", icon: "fa-angular", prefix: "fab" },
      { name: "TypeScript", icon: "fa-js", prefix: "fab" },
      { name: "JavaScript", icon: "fa-js-square", prefix: "fab" },
      { name: "Tailwind CSS", icon: "fa-wind", prefix: "fas" },
      { name: "HTML/CSS", icon: "fa-code", prefix: "fas" }
    ]
  },
  {
    title: "Machine Learning & AI",
    skills: [
      { name: "PyTorch", icon: "fa-fire", prefix: "fas" },
      { name: "TensorFlow", icon: "fa-cubes", prefix: "fas" },
      { name: "Scikit-learn", icon: "fa-brain", prefix: "fas" },
      { name: "LangChain", icon: "fa-link", prefix: "fas" },
      { name: "LLMs", icon: "fa-robot", prefix: "fas" },
      { name: "RAG", icon: "fa-search", prefix: "fas" }
    ]
  },
  {
    title: "Databases & Cloud",
    skills: [
      { name: "PostgreSQL", icon: "fa-database", prefix: "fas" },
      { name: "MongoDB", icon: "fa-database", prefix: "fas" },
      { name: "Redis", icon: "fa-database", prefix: "fas" },
      { name: "Google Cloud", icon: "fa-cloud", prefix: "fas" },
      { name: "AWS", icon: "fa-cloud", prefix: "fas" },
      { name: "Azure", icon: "fa-cloud", prefix: "fas" }
    ]
  },
  {
    title: "Software Engineering",
    skills: [
      { name: "Git", icon: "fa-git-alt", prefix: "fab" },
      { name: "CI/CD", icon: "fa-sync", prefix: "fas" },
      { name: "Agile", icon: "fa-tasks", prefix: "fas" },
      { name: "TDD", icon: "fa-vial", prefix: "fas" },
      { name: "System Architecture", icon: "fa-sitemap", prefix: "fas" },
      { name: "Performance Optimization", icon: "fa-tachometer-alt", prefix: "fas" }
    ]
  }
];

const { categories = defaultCategories } = Astro.props;
---

<section id="skills" class="py-16 px-4 section-transition">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-center text-gradient">My Skills</h2>
    
    <!-- First row with 3 categories -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
      {categories.slice(0, 3).map((category) => (
        <SkillCard title={category.title} skills={category.skills} className="rounded-2xl" />
      ))}
    </div>
    
    <!-- Second row with 2 categories, centered -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:w-2/3 mx-auto">
      {categories.slice(3, 5).map((category) => (
        <SkillCard title={category.title} skills={category.skills} className="rounded-2xl" />
      ))}
    </div>
  </div>
</section>
