const { categories = defaultCategories } = Astro.props;
---

<section id="skills" class="py-16 px-4 section-transition">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-center text-gradient">My Skills</h2>

    <!-- First row with 3 categories -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
      {
        categories
          .slice(0, 3)
          .map((category) => (
            <SkillCard
              title={category.title}
              skills={category.skills}
              className="rounded-2xl"
            />
          ))
      }
    </div>

    <!-- Second row with 3 categories -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {
        categories
          .slice(3, 6)
          .map((category) => (
            <SkillCard
              title={category.title}
              skills={category.skills}
              className="rounded-2xl"
            />
          ))
      }
    </div>
  </div>
</section>
