---
import { buildUrl } from '../../utils/paths';

interface Props {
  initials?: string;
  paragraphs?: string[];
  imagePath?: string;
}

const defaultParagraphs = [
  "I'm a Master of Science in Computer Science graduate from UC Riverside with 2+ years of professional software development experience specializing in Full-Stack development and AI/ML systems.",
  "Currently, I'm working as a Software Developer at AllCheer, where I've reengineered HIPAA compliant enterprise systems achieving $20K annual savings and 60% faster processing times harnessing the power of AI and cloud infrastructure.",
  "I'm passionate about responsible and ethical AI, privacy-respecting systems, and building technology that aligns with open-source values and user privacy principles."
];


const {
  initials = "Q",
  paragraphs = defaultParagraphs,
  imagePath = buildUrl('mumei.jpg'),
} = Astro.props;
---

<section
  id="about"
  class="py-16 px-4 section-transition"
>
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-center text-gradient">About Me</h2>

    <div class="flex flex-col md:flex-row gap-8 items-center">
      <div class="md:w-1/3">
        <div class="w-64 h-64 rounded-full mx-auto overflow-hidden shadow-glass glass-liquid" data-glass-interactive data-glass-random>
          <img src={imagePath} alt="Arnav Panigrahi" class="w-full h-full object-cover" title="nanashi" />
        </div>
      </div>

      <div class="md:w-2/3">
        {paragraphs.map((paragraph) => <p class="mb-4 text-lg text-white/90">{paragraph}</p>)}
      </div>
    </div>
  </div>
</section>
