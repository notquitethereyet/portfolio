---
interface Props {
  name?: string;
  title?: string;
  description?: string;
}

const { 
  name = "Arnav Panigrahi",
  title = "Software Developer, AI/ML Enthusiast",
  description = "Building ethical AI systems that solve real-world problems"
} = Astro.props;
---

<section class="hero-section min-h-screen flex flex-col justify-center items-center text-center p-8 section-transition">
  <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-[1.15] text-gradient text-shadow-lg">{name}</h1>
  <h2 class="text-2xl md:text-3xl mb-4 text-comment text-shadow-md">{title}</h2>
  <p class="text-xl mb-10 text-white/80 max-w-2xl">{description}</p>
  <div class="flex flex-wrap justify-center btn-row">
    <div class="btn-wrap">
      <a href="#about" class="btn-fancy" data-glass-interactive data-glass-random>
        <span>About Me</span>
      </a>
      <div class="btn-shadow"></div>
    </div>
    <div class="btn-wrap">
      <a href="#projects" class="btn-fancy" data-glass-interactive data-glass-random>
        <span>View Projects</span>
      </a>
      <div class="btn-shadow"></div>
    </div>
    <div class="btn-wrap">
      <a href="#cta" class="btn-fancy rounded-full w-14 h-14 relative text-white hover:text-[--color-accent-500] transition-colors duration-200" data-glass-interactive data-glass-random>
        <i class="fas fa-envelope text-lg absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"></i>
      </a>
      <div class="btn-shadow"></div>
    </div>
  </div>
</section>
