---
// Define the shape of a social link object for TypeScript
interface SocialLink {
  href: string;
  label: string;
  icon: string; // e.g., "fab fa-github"
}

interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
  socials?: SocialLink[];
}

const {
  title = "Connect With Me",
  description = "I'm always interested in new opportunities and exciting projects. Let's connect!",
  buttonText, // No default value, so it's undefined unless passed
  buttonLink, // No default value
  socials = [
    { href: "https://github.com/notquitethereyet", label: "GitHub", icon: "fab fa-github" },
    { href: "https://www.linkedin.com/in/arnav-panigrahi/", label: "LinkedIn", icon: "fab fa-linkedin" },
    { href: "https://notquitethereyet.github.io/resume/resumeml.pdf", label: "Portfolio", icon: "fas fa-file-pdf" },
    { href: "mailto:arnav.panigrahi@gmail.com", label: "Email", icon: "fas fa-envelope" }
  ]
} = Astro.props;
---

<section id="cta" class="py-16 px-4 section-transition">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl font-bold mb-8 text-gradient">{title}</h2>
    
    <div class="glass-container shadow-glass transform hover:-translate-y-1 transition duration-300"
      data-glass-interactive data-glass-random>
      <div class="glass-filter"></div>
      <div class="glass-overlay"></div>
      <div class="glass-specular"></div>
      <div class="glass-content p-8 md:p-12">
        <p class="text-xl text-white/80 mb-8 max-w-2xl mx-auto">{description}</p>
        
        <div class="flex justify-center space-x-6">
          {socials.map(social => (
            <a 
              href={social.href}
              class="text-[--color-brand-500] hover:text-[--color-accent-500] transition text-2xl"
              aria-label={social.label}
              target="_blank"
              rel="noopener noreferrer"
            >
              <i class={social.icon}></i>
            </a>
          ))}
        </div>

        {buttonText && buttonLink && (
          <div class="mt-10">
            <a 
              href={buttonLink} 
              class="inline-block bg-[--color-accent-500] text-white font-bold py-3 px-8 rounded-full hover:bg-[--color-accent-600] transition duration-300"
            >
              {buttonText}
            </a>
          </div>
        )}
      </div>
    </div>
  </div>
</section>