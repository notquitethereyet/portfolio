---
import { buildUrl } from '../../utils/paths';

interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  title = "Connect With Me",
  description = "I'm always interested in new opportunities and exciting projects. Let's discuss how we can work together to create innovative solutions.",
  buttonText = "Connect with me",
  buttonLink = "#contact"
} = Astro.props;
---

<section id="cta" class="py-16 px-4 section-transition">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-center text-gradient">Connect With Me</h2>
    
    <div class="glass-container shadow-glass transform hover:-translate-y-1 transition duration-300"
      data-glass-interactive data-glass-random>
      <div class="glass-filter"></div>
      <div class="glass-overlay"></div>
      <div class="glass-specular"></div>
      <div class="glass-content p-8 md:p-12">
        <p class="text-xl text-white/80 mb-8 max-w-2xl mx-auto">{description}</p>
        
        <div class="flex justify-center space-x-6">
          <a href="https://github.com/notquitethereyet" class="text-[--color-brand-500] hover:text-[--color-accent-500] transition text-2xl" aria-label="GitHub" target="_blank" rel="noopener noreferrer">
            <i class="fab fa-github"></i>
          </a>
          <a href="https://www.linkedin.com/in/arnav-panigrahi/" class="text-[--color-brand-500] hover:text-[--color-accent-500] transition text-2xl" aria-label="LinkedIn" target="_blank" rel="noopener noreferrer">
            <i class="fab fa-linkedin"></i>
          </a>
          <a href="https://notquitethereyet.github.io/portfolio" class="text-[--color-brand-500] hover:text-[--color-accent-500] transition text-2xl" aria-label="Portfolio" target="_blank" rel="noopener noreferrer">
            <i class="fas fa-globe"></i>
          </a>
          <a href="mailto:arnav.panigrahi@gmail.com" class="text-[--color-brand-500] hover:text-[--color-accent-500] transition text-2xl" aria-label="Email">
            <i class="fas fa-envelope"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
