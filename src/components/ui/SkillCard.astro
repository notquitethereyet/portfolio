---
interface Skill {
  name: string;
  icon: string;
  prefix?: string;
}

interface Props {
  title: string;
  skills: Skill[];
  className?: string;
}

const { title, skills, className = "" } = Astro.props;
---

<div class={`glass-container shadow-glass transform hover:-translate-y-1 transition duration-300 ${className}`}
  data-glass-interactive data-glass-random>
  <div class="glass-filter"></div>
  <div class="glass-overlay"></div>
  <div class="glass-specular"></div>
  <div class="glass-content p-6">
    <h3 class="text-xl font-bold mb-4 text-accent text-shadow-md text-center">{title}</h3>
    <ul class="space-y-2">
      {skills.map((skill) => (
        <li class="flex items-center text-white/90">
          <i class={`${skill.prefix || 'fas'} ${skill.icon} text-[--color-brand-500] mr-2 w-6 text-center`}></i>
          <span class="text-white/90">{skill.name}</span>
        </li>
      ))}
    </ul>
  </div>
</div>
